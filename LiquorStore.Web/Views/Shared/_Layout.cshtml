@using Microsoft.AspNet.Identity;
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
    <title>@ViewBag.Title Liquor Store Happiness and Comfort</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-expand-lg navbar-light bg-primary">
        <a class="navbar-brand" href="/">H&C</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
                </li>
                @if (this.User.IsInRole("Administrator"))
                {
                    <li class="nav-item active">
                        <a class="nav-link" href="/category/all">Categories <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" href="/liquor/all">Liquors <span class="sr-only">(current)</span></a>
                    </li>

                    <li class="nav-item active">
                        <a class="nav-link" href="/account/all">Customers <span class="sr-only">(current)</span></a>
                    </li>
                }

                @if (this.User.Identity.IsAuthenticated)
                {
                    <li class="nav-item active">
                        <a class="nav-link" href="/shopping/catalogue">Catalogue <span class="sr-only">(current)</span></a>
                    </li>


                    <li class="nav-item active">
                        <a class="nav-link" href="/shopping/getlucky">Get Lucky <span class="sr-only">(current)</span></a>
                    </li>


                    <li class="nav-item active">
                        <a class="nav-link" href="/shopping/PromotionCodeItems">Promotion Code Items<span class="sr-only">(current)</span></a>
                    </li>

                    <li class="nav-item active">
                        <a class="btn btn-primary" href="/shopping/cartsummary">
                            <i style="font-size: xx-large" class="fa fa-shopping-cart"></i>
                            Checkout
                        </a>
                    </li>

                    <li class="nav-item active">
                        <a class="nav-link" href="/account/EditPersonalInfo/@this.User.Identity.GetUserId()">Edit your Information<span class="sr-only">(current)</span></a>
                    </li>
                }

                @Html.Partial("_LoginPartial")


            </ul>

        </div>


    </div>

    <br /> <br />

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Liquor Store Happiness and Comfort</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
