@using LiquorStore.Web.Models
@model IEnumerable<UserViewModel>

<h2>All Customers - Total Count: @Model.Count()</h2>

<table class="table table-hover table-bordered">
    <thead>
        <tr>
            <th>
                FirstName
            </th>
            <th>LastName</th>
            <th>Address</th>
        </tr>
    </thead>

    @foreach (var c in Model)
    {
        <tbody>
            <tr>
                <td>@c.FirstName</td>
                <td>@c.LastName</td>
                <td>@c.Address</td>
                <td><a class="btn btn-secondary" href="edit/@c.Id">Edit</a></td>
                <td>
                    @using (Html.BeginForm("Delete", "Account", new { Id = c.Id }, FormMethod.Post))
                    {
                        <input type="submit" value="Delete" class="btn btn-secondary btn-danger" />
                    }
                </td>
            </tr>
        </tbody>
    }

</table>


